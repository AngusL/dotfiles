# Make sure .bashrc, .bash_profile work correctly
term xterm
shell -$SHELL

# 256 color support
attrcolor b ".I"                                             # Colour bold
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'     # Colour how? (1)
terminfo rxvt-unicode 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm' # Colour how? (2)
defbce on                                                    # Erasure=BG colour

altscreen on                # Don't leave e.g. text from vim on screen afterward
termcapinfo xterm* ti       # Use native scrollback
vbell off                   # Visual bell is annoying

# Keep better history
defscrollback 5000

# Look and feel
caption    always         "%t [%n]"
hardstatus alwayslastline "%-33=%l %{+ .G}::%{-} %-15=%c %D %d/%m"
