[alias]
show = log -pr

[commands]
rebase.requiredest = true

[merge-tools]
vimdiff.executable = vimdiff
vimdiff.args = -f -d $output -M $local $base $other -c "wincmd J" -c "set modifiable" -c "set write"
vimdiff.premerge = keep

[rebase]
experimental.inmemory = true

[ui]
merge = vimdiff

[extensions]
extdiff=

[extdiff]
vimdiff=
